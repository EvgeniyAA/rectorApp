<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:orientation="horizontal"
    android:weightSum="1">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="0.32"
        android:layout_gravity="center_vertical"
        android:textColor="@color/text_color_black"
        android:fontFamily="@font/roboto_medium"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        android:text="@string/name_field"/>
    <TextView
        android:id="@+id/first_year"
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textColor="@color/text_color_black"
        android:fontFamily="@font/roboto_medium"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        tools:text="2017"/>
    <TextView
        android:id="@+id/second_year"
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textColor="@color/text_color_black"
        android:fontFamily="@font/roboto_medium"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        tools:text="2018"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="0.22"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textColor="@color/text_color_black"
        android:fontFamily="@font/roboto_medium"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        android:text="@string/overall"/>
</LinearLayout>
    <View
        android:id="@+id/main_underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#1295D8"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/students"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/graduet_item"
        tools:itemCount="3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.32"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_color_black"
            android:fontFamily="@font/roboto_medium"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:text="@string/overall"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="0.025"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/first_year_total"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:background="@drawable/rounded_background_gray"
            android:fontFamily="@font/roboto_medium"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            tools:text="2017"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="0.05"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/second_year_total"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:background="@drawable/rounded_background_gray"
            android:fontFamily="@font/roboto_medium"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            tools:text="2018"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="0.05"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/total_from_years"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:gravity="center"

            android:layout_gravity="center_vertical"
            android:background="@drawable/rounded_background_light_green"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_medium"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:text="@string/overall"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="0.025"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
